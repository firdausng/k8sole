@using k8s.Models
<div class="col-12">
    <div class="d-flex justify-content-end p-3">
        <div class="dropdown">
            <a href="#" class="d-flex align-items-center link-dark text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                <strong>@(string.IsNullOrEmpty(_currentNamespaceList) ? "All" : _currentNamespaceList)</strong>
            </a>
            <ul class="dropdown-menu text-small shadow">
                <li><a class="dropdown-item" href="#" @onclick="async()=>await ClearCurrentNamespace()">All</a></li>
                <li><hr class="dropdown-divider"></li>
                @foreach (var ns in _contextNamespaces)
                {
                    <li><button class="dropdown-item" @onclick="async()=>await UpdateCurrentNamespace(ns.Name())">@ns.Name()</button></li>
                }
            </ul>
        </div>
    </div>
</div>
